<h2>Lista de posts</h2>

<hr>

<a href="/admin/posts/add"><button class="btn btn-success">+ Novo Post</button></a>

{{#each posts}}
<div class="card mt-2">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>slug: {{slug}}</small>
        <br>
        <small>Data de criação: {{date}}</small>
        <br>
        <a href="/admin/posts/edit/{{_id}}" class="btn btn-success mt-2">Editar</a>
        <a href="/admin/posts/delete/{{_id}}" class="btn btn-danger mt-2">Excluir</a>
    </div>
</div>
{{else}}
<h3 class="mt-3"> Nenhuma post registrado </h3>
{{/each}}