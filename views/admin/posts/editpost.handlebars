{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h3>Editar Post</h3>
        <form method="post" action="/admin/posts/update">
            <input type="hidden" value="{{post._id}}" id="id" name="id">

            <label for="titulo">Titulo:</label>
            <input type=" text" value="{{post.titulo}}" id="titulo" name="titulo" placeholder="titulo do post"
                class="form-control">

            <label for="slug">Slug:</label>
            <input type="text" value="{{post.slug}}" id="slug" name="slug" placeholder="Slug do post"
                class="form-control">

            <label for="descricao">Descrição:</label>
            <input type="text" value="{{post.descricao}}" id="descricao" name="descricao"
                placeholder="Descrição do post" class="form-control"></input>

            <label for="conteudo">Conteúdo:</label />
            <textarea id="conteudo" name="conteudo" placeholder="Conteúdo do Post"
                class="form-control">{{post.conteudo}}</textarea>

            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-select">

                {{#each categorias}}
                <option value={{_id}}>{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Editar Post</button>
        </form>
    </div>
</div>