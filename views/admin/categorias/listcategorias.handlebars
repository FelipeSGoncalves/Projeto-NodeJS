<h2>Lista de Categorias</h2>

<hr>

<a href="/admin/categorias/add"><button class="btn btn-success">+ Nova Categoria</button></a>

{{#each categorias}}
<div class="card mt-2">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>slug: {{slug}}</small>
        <br>
        <small>Data de criação: {{date}}</small>
        <br>
        <a href="/admin/categorias/edit/{{_id}}" class="btn btn-success mt-2">Editar categoria</a>
        <a href="/admin/categorias/delete/{{_id}}" class="btn btn-danger mt-2">Excluir categoria</a>
    </div>
</div>
{{else}}
<h3 class="mt-3"> Nenhuma categoria registrada </h3>
{{/each}}